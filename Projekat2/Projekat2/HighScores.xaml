<Window x:Class="Projekat2.HighScores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat2"
        mc:Ignorable="d"
        Title="HighScores" Height="300" Width="300" Background="Yellow">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Label Name="naslov" HorizontalAlignment="Center">HighScores</Label>
            <DataGrid x:Name="dataGrid" HorizontalAlignment="Center" VerticalAlignment="Center" Width="260" Height="200">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Position" Width="*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Name" Width="2*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Score" Width="2*"></DataGridTextColumn>
                </DataGrid.Columns> 
            </DataGrid>
            
        </StackPanel>

    </Grid>
</Window>
